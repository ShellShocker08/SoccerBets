@model Soccer.Web.Models.TeamViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="LogoPath" />
            <input type="hidden" asp-for="Active" />

            <partial name="_Team" />

            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Regresar al Listado</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.LogoPath))
        {
            <img src="@Url.Content(Model.LogoPath)" alt="Image"
                 style="width:200px;height:200px;" />
        }
    </div>
</div>

