@model IEnumerable<Soccer.Web.Data.Entities.TeamEntity>
@{
    ViewData["Title"] = "Index";
}

<h1>Equipos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Equipo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.LogoPath)</th>
            <th>@Html.DisplayNameFor(model => model.Active)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.LogoPath))
                    {
                        <img src="@Url.Content(item.LogoPath)" alt="Image" 
                             style="width:100px;height:100px;" />
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.Active)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detalle</a>
                    @if (item.Active)
                    {
                        <a asp-action="ChangeStatus" asp-route-id="@item.Id" class="btn btn-danger">Deshabilitar</a>
                    }
                    else
                    {
                        <a asp-action="ChangeStatus" asp-route-id="@item.Id" class="btn btn-success">Habilitar</a>
                    }
                </td>
            </tr>

        }
    </tbody>
</table>
