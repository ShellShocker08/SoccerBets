@model IEnumerable<Soccer.Web.Data.Entities.TeamEntity>
@{
    ViewData["Title"] = "Index";
}

<!-- DataTable -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<br />


<p>
    <a asp-action="Create" class="btn btn-primary">Crear Equipo</a>
</p>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Teams</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">

                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.LogoPath)</th>
                            <th>@Html.DisplayNameFor(model => model.Active)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.LogoPath))
                                    {
                                        <img src="@Url.Content(item.LogoPath)" alt="Image"
                                             style="width:100px;height:100px;" />
                                    }
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Active)</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detalle</a>
                                    @if (item.Active)
                                    {
                                        <a asp-action="ChangeStatus" asp-route-id="@item.Id" class="btn btn-danger">Deshabilitar</a>
                                    }
                                    else
                                    {
                                        <a asp-action="ChangeStatus" asp-route-id="@item.Id" class="btn btn-success">Habilitar</a>
                                    }
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });
    </script>
}